<!DOCTYPE html>
    <html>
    <head>
        <title>Login</title>
    <link href="~/css/style.css" rel="stylesheet" />
    </head>
    <body>
    <img class="wave" src="~/wave.png">
    <div class="container">
        <div class="img">
            <img src="~/bg.svg">
        </div>
        <div class="login-content">
            <form asp-action="LogIn" asp-controller="Home" method="post">
                <img src="~/avatar.svg">
                <h2 class="title">Welcome</h2>
                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="div">
                        <h5>Username</h5>
                        <input type="text" class="input" required name="user" autocomplete="off">
                    </div>
                </div>
                <div class="input-div pass">
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="div">
                        <h5>Password</h5>
                        <input type="password" class="input" name="pass" required autocomplete="off">
                    </div>
                </div>
@*                 <a href="#">Forgot Password?</a>
 *@                <span class="text-danger  fw-lighter">@ViewBag.error</span>
                <input type="submit" class="btn" value="Login">
            </form>
        </div>
    </div>
    <script src="~/js/main.js"></script>
    </body>
    </html>
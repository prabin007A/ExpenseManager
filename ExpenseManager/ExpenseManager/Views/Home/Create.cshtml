@model ExpenseManager.Models.ExpenseModel
<!DOCTYPE html>
    <html>
    <head>
        <title>Create new expenses</title>
    </head>
    <body>
     <div class="container col-md-6 mt-4">
        <div class=" text-capitalize text-center text-secondary">
            <h3 class="text-break">Add new expense here</h3>
        </div>

        <div class="card-body">
            <form action="/Home/Create" method="post">
                <div class="form-group">
                    <label for="description" class="col-form-label">Description</label>
                    <input type="text" asp-for="Description"  class="form-control" placeholder="Enter Description" autocomplete="off" />
                    <span asp-validation-for="Description" class="text-danger fw-light"></span>
                </div>

                <div class="form-group">
                    <label for="amount" class="form-label">Amount</label>
                    <input type="number" asp-for="Amount"  class="form-control" placeholder="Enter Amount" autocomplete="off" />
                    <span asp-validation-for="Amount" class="text-danger fw-light"></span>
               </div>

                <div class="form-group">
                    <label for="date" class="form-label">Date</label>
                    <input type ="date" asp-for = "Date" class="form-control" placeholder="Choose Date" autocomplete="off" />
                    <span asp-validation-for="Date" class="text-danger fw-light"></span>
                </div>

                <div class="mt-4 d-flex justify-content-center">
                    <button type="submit" class="btn btn-outline-info justify-content-center">Add Expense</button>
                </div>

            </form>
        </div>
     </div>
    </body>
    </html>

@section scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

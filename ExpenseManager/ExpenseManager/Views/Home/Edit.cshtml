@model ExpenseManager.Models.ExpenseUpdateModel
<!DOCTYPE html>
<html>
<head>
    <title>Edit expenses</title>
</head>
<body>
    <div class="container col-md-6 mt-4">
        <div class=" text-capitalize text-center text-secondary">
            <h3 class="text-break">Update expenses here</h3>
        </div>

        <div class="card-body">
            <form asp-action="Edit" asp-controller="Home" method="post">
                <div class="form-group">
                    <label for="description" class="col-form-label">Description</label>
                    <input type="text" asp-for="Description" class="form-control" placeholder="Enter Description" autocomplete="off" />
                </div>

                <div class="form-group">
                    <label for="amount" class="form-label">Amount</label>
                    <input type="number" asp-for="Amount" class="form-control" placeholder="Enter Amount" autocomplete="off" />
                </div>

                <div class="form-group">
                    <label for="date" class="form-label">Date</label>
                    <input type="date" asp-for="Date" class="form-control" placeholder="Choose Date" autocomplete="off" />
                </div>

                <div class="mt-4 d-flex justify-content-center">
                    <button type="submit" class="btn btn-outline-success justify-content-center">Save Changes</button>
                </div>

            </form>
        </div>
    </div>
</body>
</html>


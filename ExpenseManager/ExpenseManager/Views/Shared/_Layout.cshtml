<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExpenseManager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ExpenseManager.styles.css" asp-append-version="true" />
    <link href="~/budget.png" rel="icon" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header id="head">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3 bg-transparent">
            <div class="container-fluid">
                <a class="navbar-brand text-light" id="Logo" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/0Prguf-LogoMakr.png" alt="Website Logo" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between ms-lg-5">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="btn btn-outline-secondary" asp-area="" asp-controller="Home" asp-action="Home"><i class="bi bi-house-door-fill"></i>Home</a>
                        </li>
                        <li class="nav-item ms-lg-4">
                            <a class="btn btn-outline-secondary" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-currency-rupee"></i>MyExpenses</a>
                        </li>

                        <li class="nav-item ms-lg-4">
                            <a class="btn btn-outline-secondary" asp-area="" asp-controller="Home" asp-action="Reports"><i class="bi bi-bar-chart-line"></i> Reports</a>
                        </li>
                    </ul>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        <li class="nav-item">
                            <a class="text-white btn btn-danger" asp-area="" asp-controller="Home" asp-action="LogOut"><i class="bi bi-toggle2-off"></i>&nbsp; LogOut</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer id="foot" class="border-top footer text-muted d-flex justify-content-center align-items-center">
        <div class="container text-center">
            &copy; 2024 - ExpenseManager
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
